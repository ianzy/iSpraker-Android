<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tabViewLayout" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="@drawable/tab_bg_selector"
	android:padding="5dip" android:gravity="center" android:orientation="vertical">
	<ImageView android:id="@+id/tabImage" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />
	<TextView android:id="@+id/tabText" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Title"
		android:textSize="15dip" android:textColor="@drawable/tab_text_selector" />
</LinearLayout>